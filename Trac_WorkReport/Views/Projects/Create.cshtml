@{
}
@model Projects

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Project</h2>
        </div>
        <div class="mb-3">
            <label>Project </label>
            <input asp-for="ProjectNumber" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Project Name</label>
            <input asp-for="ProjectName" type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Submit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Projects" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
            </div>

        </div>

    </div>
</form>
