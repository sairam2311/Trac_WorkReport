@{
}
@model List<Projects>
<div class="container">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">
                Projects
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Project
            </a>

        </div>

    </div>

    <table class="table table-hover table-bordered table-striped table-default dataTable">
        <thead>
            <tr>
                <th>Project</th>
                <th>Project Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.ProjectNumber))
            {
                <tr>
                    <td>@obj.ProjectNumber</td>
                    <td>@obj.ProjectName</td>
                    <td>
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Projects" asp-action="Edit" asp-route-id="@obj.ProjectId" class="mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Projects" asp-action="Delete" asp-route-id="@obj.ProjectId">
                                <i class="bi bi-archive-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>