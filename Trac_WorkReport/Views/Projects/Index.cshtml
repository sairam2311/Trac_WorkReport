@model List<Projects>



<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-primary">Projects</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Project
            </a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Project Number</th>
                        <th>Project Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.OrderBy(p => p.ProjectNumber))
                    {
                        <tr>
                            <td>@project.ProjectNumber</td>
                            <td>@project.ProjectName</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Projects" asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Projects" asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


