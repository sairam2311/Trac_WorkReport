@{
}

@using Microsoft.AspNetCore.Identity
@using WorkReport.Models;
@model ApplicationRole


<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Designation</h2>
        </div>
        <div class="mb-3">
            <label>Designation Abbrivation </label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Designation Full </label>
            <input asp-for="RoleName" type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
            </div>

        </div>

    </div>
</form>
