@using WorkReport.Models.Models;
@model UserIndexViewModelTS

@{
    ViewData["Title"] = "User Index";
}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header">
                    User Details
                </div>
                <div class="card-body card-body-custom">
                    <div class="row info-row">
                        <div class="col-sm-2">
                            <span class=" col-form-label">Full Name</span>
                        </div>
                        <div class="col-sm-4">
                            <span class="form-control-plaintext text-primary fw-bold">@Model.CurrentUser.EmployeeName</span>
                        </div>
                        <div class="col-sm-2">
                            <span class="col-sm-2 col-form-label">Employee ID</span>
                        </div>
                        <div class="col-sm-4">
                            <span class="form-control-plaintext text-secondary">@Model.CurrentUser.EmployeeID</span>
                        </div>
                    </div>
                    <hr>
                    <div class="row info-row">
                        <div class="col-sm-2">
                            <span class="col-sm-2 col-form-label">Reporting Officer</span>
                        </div>
                        <div class="col-sm-4">
                            @if (string.IsNullOrEmpty(Model.CurrentUser.ReportingOfficerName))
                            {
                                <span class="form-control-plaintext text-danger">No Reporting Officer Assigned</span>
                            }
                            else
                            {
                                <span class="form-control-plaintext text-success">@Model.CurrentUser.ReportingOfficerName</span>
                            }
                        </div>
                        <div class="col-sm-2">
                            <span class="col-sm-2 col-form-label">Designation</span>
                        </div>
                        <div class="col-sm-4">
                            @foreach (var role in Model.CurrentUser.Roles)
                            {
                                <span class="form-control-plaintext text-light me-1">@role.RoleName</span>
                            }
                        </div>
                    </div>
                    <hr>
                    <div class="row info-row">
                        <div class="col-sm-2">
                            <span class="col-sm-2 col-form-label">Reviewing Officer</span>
                        </div>
                        <div class="col-sm-4">
                            <span class="form-control-plaintext text-danger">@Model.CurrentUser.ReviewingofficerName</span>
                        </div>
                        <div class="col-sm-6 text-end">
                            <a asp-controller="TS" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add Self Report
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


