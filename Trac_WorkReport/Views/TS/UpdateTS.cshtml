    <!-- Project Addition Form -->


    <div class="container mt-4">

    <form asp-action="UpdateTS" method="post">
                    <input type="hidden" name="UserId" value="@Model.reportViewModels.First().UserId" />
                  
            <div class="card shadow">

                <h5 class="card-header text-primary">Update Work Details</h5>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Employee Name:</label>
                            <input type="text" class="form-control" disabled name="reportViewModels[0].EmployeeName" value="@Model.reportViewModels.FirstOrDefault()?.EmployeeName" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Employee ID:</label>
                            <input type="text" class="form-control" disabled name="reportViewModels[0].EmployeeID" value="@Model.reportViewModels.FirstOrDefault()?.EmployeeID" />
                        </div>
                    </div>

                    @foreach (var reportViewModel in Model.reportViewModels)
                    {
                        @foreach (var timeSheet in reportViewModel.TimeSheets)
                        {
                            <div class="mb-3">
                                <div class="form-group mt-1">
                                    <label class="fw-bold">Work Title</label>
                                <input type="text" class="form-control mt-1" readonly value="@timeSheet.WorkTitle">
                                </div>

                            <div class="form-group mt-1">
                                    <label class="fw-bold">Report Date</label>
                                <input type="text" class="form-control mt-1" readonly value="@timeSheet.ReportDate">
                                </div>

                            <div class="form-group mt-1">
                                    <label class="fw-bold">Work</label>
                                <textarea class="form-control mt-1" rows="3" @(reportViewModel.UserId != reportViewModel.currentuser ? "readonly" : "") name="timeSheet.Work">@Html.Raw(timeSheet.Work)</textarea>
                                </div>

                                @if (reportViewModel.currentuser == reportViewModel.ReportOfc)
                                {
                                <div class="form-group mt-1">
                                        <label class="fw-bold">Remarks by Reporting Officer</label>
                                    <textarea class="form-control mt-1" rows="6" name="timeSheet.RemarksByRpOf">@Html.Raw(timeSheet.RemarksByRpOf)</textarea>
                                    </div>
                                }

                                @if (reportViewModel.currentuser == reportViewModel.ReviewOfc)
                                {
                                <div class="form-group mt-1">
                                        <label class="fw-bold">Remarks by Reviewing Officer</label>
                                    <textarea class="form-control mt-1" rows="6" name="timeSheet.RemarksByReOf">@Html.Raw(timeSheet.RemarksByReOf)</textarea>
                                    </div>
                                }
                            </div>
                        }
                    }
                    </div>
                    <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col text-end">
                        <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div>
                </div>
            </div>
                </form>
            </div>
      





