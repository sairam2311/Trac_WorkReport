    <!-- Designations Table -->
    <table id="designationsTable" class="table table-bordered table-striped dataTable">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>User Name</th>
                <th>Designation</th>
                
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.AllUsersWithRoles.OrderBy(u => u.EmployeeName))
            {
                <tr>
                    <td>@obj.employeeID</td>
                    <td>@obj.EmployeeName</td>
                    <td>@string.Join(", ",obj.Roles.Select(r=>r.RoleName))</td>
                    <td>@obj.Email</td>
                    <td>
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Designation" asp-action="Edit" asp-route-id="@obj.Id" class="mx-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Designation" asp-action="Delete" asp-route-id="@obj.Id" class="mx-1">
                                <i class="bi bi-archive-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <!-- Initialize DataTables -->
    <script>
        $(document).ready(function () {
            $('#designationsTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "paginate": {
                        "previous": "&laquo;",
                        "next": "&raquo;"
                    }
                }
            });
        });
    </script>
