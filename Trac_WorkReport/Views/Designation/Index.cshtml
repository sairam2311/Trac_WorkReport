@model List<Designation>


<div class="container">
    <div class="row pt-4">
        <!-- Title and Add Button Section -->
        <div class="col-6">
            <h2 class="text-primary">Designation</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Designation" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Designation
            </a>
        </div>
       
    </div>

    <!-- Designations Table -->
    <table id="designationsTable" class="table table-bordered table-striped dataTable">
        <thead>
            <tr>
                <th>Designation</th>
                <th>Designation Full Form</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DesShort))
            {
                <tr>
                    <td>@obj.DesShort</td>
                    <td>@obj.DesFull</td>
                    <td>
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Designation" asp-action="Edit" asp-route-id="@obj.DesId" class="mx-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Designation" asp-action="Delete" asp-route-id="@obj.DesId" class="mx-1">
                                <i class="bi bi-archive-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




